           <script>
            document.getElementById('update-voter').addEventListener('submit', function(event){

                const form = event.target;
                const squadno=document.getElementById("squad-btn").value.toLowerCase();
                const availability=document.getElementById("availability-btn").value.toLowerCase();
                const openvote=document.getElementById("open-btn").value.toLowerCase();
                const postalvote=document.getElementById("postal-btn").value.toLowerCase();
                const boothno = document.getElementById('boothno').value;
                const serialnumber = document.getElementById('serialnumber').value;
                const votername= document.getElementById('votername').value;
                const houseno= document.getElementById('houseno').value;
                const housename= document.getElementById('housename').value;
                const idno= document.getElementById('idno').value;
                const id = `<%= id %>`; 
                form.action = `/voteredit1/update/${id}/${serialnumber}/${votername}/${houseno}/${housename}/${idno}/${availability}/${openvote}/${postalvote}/${boothno}/${squadno}`;
            });
           </script>
           
           
