                                <option value="yes">Yes</option>
                              <option value="no">No</option>
                            </select>
                            <p style="padding: 20 0;font-weight: bold;">Postal Vote :</p>
                            <select class="selection--btn" id="postal-btn">
                                <option value="yes">Yes</option>
